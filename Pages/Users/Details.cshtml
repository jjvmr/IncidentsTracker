                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>   
                            <td>
                                @Html.DisplayFor(modelItem => item.Submitter.DisplayName)
                            </td>
                        </tr>
                    }
                </tbody> *@
            </table>
        </dd>

    </dl>
</div>
