@model IncidentsTrackingSystem.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AppUser</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Password)
        </dd>
        <dt>
                @Html.DisplayFor(model => model.AppUser.AssignedProjects)
        </dt>
        <dd class="col-sm-10">
            <table>
                <tr>
                    <th>Project Assigned</th>
                    <th>Incident Title</th>
                    <th>Description</th>
                </tr>
                @foreach (var item in Model.AppUser.SubmittedTickets)
                {
                    <tr>
                        <td class="col-sm-4">
                            @Html.DisplayFor(modelItem => item.Project.Title)
                        </td>   
                        <td class="col-sm-4">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="col-sm-4">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }
                @* <tbody>
                    @foreach (var item in Model.AppUser.SubmittedTickets)
                    {
